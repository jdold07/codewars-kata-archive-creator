{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16",
  "exclude": ["node_modules", "**/node_modules/*"],

  "compilerOptions": {
    "lib": ["ES2022"],
    "module": "CommonJS",
    "target": "ES2022",
    "jsx": "preserve",
    "strict": true,
    "removeComments": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleDetection": "auto",
    "moduleResolution": "Node",
    "outDir": "./dist"
  }
}
