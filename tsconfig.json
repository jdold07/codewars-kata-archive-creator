{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16",
  "exclude": ["node_modules", "**/node_modules/*"],

  "compilerOptions": {
    "lib": ["es2021"],
    "module": "CommonJS",
    "target": "ES2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleDetection": "auto",
    "moduleResolution": "Node"
  }
}
