{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "JS/TS File in Console",
      "type": "node",
      "request": "launch",
      "program": "${file}",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "outFiles": ["${workspaceFolder}/**/*.js", "!**/node_modules/**"],
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "runtimeArgs": ["-r", "ts-node/register", "-r", "tsconfig-paths/register"]
    },
    {
      "name": "Jest Debug Tests with nyc html Output",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/nyc/bin/nyc",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "cwd": "${fileDirname}",
      "outFiles": ["${fileDirname}/out/*.js", "!**/node_modules/**"],
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "args": ["--reporter=html", "npm", "run", "test", "${file}"]
    },
    {
      "name": "PY File Debug in Console",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "purpose": ["debug-test"],
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false
    },
    {
      "name": "PY File in Terminal",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "lldb: File in Console",
      "type": "lldb",
      "request": "launch",
      "program": "${file}",
      "console": "internalConsole",
      "args": []
    },
    {
      "name": "vscode-jest-tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/nyc/bin/nyc",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "cwd": "${fileDirname}",
      "outFiles": ["${fileDirname}/out/*.js", "!**/node_modules/**"],
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "args": ["--reporter=html", "npm", "run", "test", "${file}"]
    }
  ]
}
